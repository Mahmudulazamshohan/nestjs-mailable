# NestJS Mailable SES Configuration

# Application Settings
PORT=3000

# Transport Configuration (smtp/ses)
MAIL_TRANSPORT=ses

# SES Configuration (LocalStack for testing)
SES_ENDPOINT=http://localhost:4566
SES_REGION=us-east-1
SES_ACCESS_KEY_ID=test
SES_SECRET_ACCESS_KEY=test

# Email Addresses (must be verified in SES)
MAIL_FROM=noreply@yourapp.com
MAIL_REPLY_TO=support@yourapp.com

# Template Engine Configuration
# Options: handlebars, ejs, pug, mjml
MAIL_TEMPLATE_ENGINE=handlebars

# For production SES (uncomment and configure)
# SES_ENDPOINT=https://email.us-east-1.amazonaws.com
# SES_REGION=us-east-1
# SES_ACCESS_KEY_ID=your-access-key
# SES_SECRET_ACCESS_KEY=your-secret-key