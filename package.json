{
  "name": "nestjs-mailable",
  "version": "1.0.0",
  "description": "A comprehensive NestJS mail package with design patterns for email handling, templating, and multi-provider support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "packageManager": "pnpm@8.0.0",
  "files": [
    "dist/**/*",
    "src/**/*",
    "templates/**/*"
  ],
  "workspaces": [
    ".",
    "docs"
  ],
  "scripts": {
    "build": "npm run build:core",
    "dev": "turbo dev",
    "test": "npm run test:core",
    "test:watch": "jest --watch",
    "test:coverage": "npm run test:core -- --coverage",
    "lint": "npm run lint:core",
    "lint:fix": "npm run lint:fix:core",
    "format": "npm run format:core",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist .turbo node_modules/.cache",
    "docs:start": "turbo start --filter=nestjs-mailable-docs",
    "docs:build": "turbo build --filter=nestjs-mailable-docs",
    "docs:serve": "turbo serve --filter=nestjs-mailable-docs",
    "build:core": "rimraf dist && tsc",
    "dev:core": "tsc --watch",
    "test:core": "jest",
    "lint:core": "eslint src/**/*.ts",
    "lint:fix:core": "eslint src/**/*.ts --fix",
    "format:core": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build:core",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "keywords": [
    "nestjs",
    "mail",
    "email",
    "nodemailer",
    "mailable",
    "typescript",
    "design-patterns"
  ],
  "author": "NestJS Mailable",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mailable.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/nestjs-mailable/issues"
  },
  "homepage": "https://github.com/your-username/nestjs-mailable#readme",
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0"
  },
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "ejs": "^3.1.10",
    "handlebars": "^4.7.8",
    "html-to-text": "^9.0.5",
    "juice": "^10.0.0",
    "mailgun.js": "^12.0.3",
    "marked": "^11.1.1",
    "mjml": "^4.15.3",
    "nodemailer": "^6.9.8",
    "pug": "^3.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/testing": "^10.3.0",
    "@types/handlebars": "^4.1.0",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.1.1",
    "turbo": "^2.3.3",
    "typescript": "^5.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
